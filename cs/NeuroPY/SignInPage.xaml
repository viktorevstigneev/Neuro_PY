<Page x:Class="NeuroPY.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeuroPY"

      Title="SignInPage" Width="768" Height="450">

    <Grid>
        <Image Source="form_sign.png" Stretch="Fill"/>
        <Image Source="avto_line.png" Margin="271,90,447,324"/>
        <TextBox  Margin="302,175,346,258" Text="Login" TextWrapping="Wrap" Width="120" Height="17" Background="Transparent" Foreground="White" BorderBrush="Transparent" />
        <TextBox  Margin="302,232,347,199" Text="Password" TextWrapping="Wrap"  Width="120" Height="17" Background="Transparent" Foreground="White" BorderBrush="Transparent" />
        <Button Content="connect" HorizontalAlignment="Left" Margin="284,286,0,139"  Height="20"  Background="Black" Foreground="White" BorderBrush="Transparent" Width="142" />
        <Button Content="Sign in" Height="20"  Margin="271,77,447,353" Background="Transparent" Foreground="White" BorderBrush="Transparent"  />
        <Button Content="Sign up" Height="20" Margin="355,77,363,353"  Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Button_Click_2" />
      
    </Grid>
</Page>
