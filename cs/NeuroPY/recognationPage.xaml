<Page x:Class="NeuroPY.recognationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeuroPY"

      Title="recognationPage" Width="768" Height="450">

    <Grid Background="White">
        <Image Source="/bg_recognize.png"/>
        <Image x:Name="frame_pict" HorizontalAlignment="Left" Height="244" VerticalAlignment="Top" Width="474" Margin="170,60,0,0"  Stretch="Uniform"/>
        <Button x:Name="btn_start_recognation" Content="Start" HorizontalAlignment="Left" Margin="227,324,0,88"  Background="Black" Foreground="White" BorderBrush="Transparent" Width="157" Click="btn_start_recognation_Click" />
        <Button x:Name="btn_stop_recognation" Content="Stop" HorizontalAlignment="Left" Margin="449,324,0,88"  Background="Black" Foreground="White" BorderBrush="Transparent" Width="157" />

    </Grid>
</Page>
